<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="no.woact.stud.smaola14.egentrening02.Oppgave2"
    android:id="@+id/layout">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgView"
        android:src="@drawable/doge_wow"
        android:adjustViewBounds="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Synlig"
        android:id="@+id/btnVisible"
        android:layout_alignTop="@+id/btnHidden"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usynlig"
        android:id="@+id/btnHidden"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/imgView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ta bort"
        android:id="@+id/btnRemove"
        android:layout_above="@+id/btnDecreaseMargin"
        android:layout_toRightOf="@+id/btnHidden"
        android:layout_toEndOf="@+id/btnHidden"
        android:layout_marginLeft="43dp"
        android:layout_marginStart="43dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ã˜ke margin"
        android:id="@+id/btnIncreaseMargin"
        android:layout_below="@+id/btnVisible"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minske Margin"
        android:id="@+id/btnDecreaseMargin"
        android:layout_below="@+id/btnHidden"
        android:layout_alignRight="@+id/btnRemove"
        android:layout_alignEnd="@+id/btnRemove" />
</RelativeLayout>
